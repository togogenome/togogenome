.main-container
  #search-methods-container
    %ul#search-methods-selector
      %li= link_to 'Facet', root_path
      %li= link_to 'Sequence', genomes_path
      %li.current ID converter
      // %li= link_to 'Text' 実装途中のため一時的に削除
      %li.search-methods-visibility-button Hide

    #methods.no-result-column
      .method-container#mappings-container
        .inner
          #mappings-selector-container
            #mapping-from-db.db-selector
              .icon(data-locative='from')
                .bottom.side
                .bottom.lid
                .middle.side
                .middle.lid
                .top.side
                .top.lid
                .db-name-container
                  %p.db-name from
              .db-list-container
                .inner
            #mapping-to-db.db-selector
              .icon(data-locative='to')
                .bottom.side
                .bottom.lid
                .middle.side
                .middle.lid
                .top.side
                .top.lid
                .db-name-container
                  %p.db-name to
              .db-list-container
                .inner
            #mapping-results-container
              .arrow-container.undefined
                .inner
                  .mapping-arrow.undefined.right-arrowhead
              #mapping-arrows-container
              #mapping-dbicons-container
              #mapping-routes-container
          #mappings-id-container
            %h2
              Identifiers
              %span.result-upload-container
                %a Upload CSV
              %span.result-download-container
                %a Download CSV
            %table#mapped-ids
              %thead
              %tbody
            #add-new-id
              %p + add new ID
              %textarea#identifiers{name:'identifiers', required: 'required'}
              .text-center.padding
                = button_tag 'Execute', {id: 'execute', class: "tg-button"}
