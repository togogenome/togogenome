csv << [
  'Environment',
  'Environment ID',
  'Environment URL'
]

limit = 100
(0..@hits_count).step(limit) do |offset|
  Proteins::Environment.search(@args.merge(limit: limit, offset:offset)).each do |e|
    csv << [
      e.name,
      e.id,
      "http://togogenome.org/environment/#{e.id}"
    ]
  end
end
