csv << [
  'Organism',
  'Organism ID',
  'Organism URL',
]

limit = 100
(0..@hits_count).step(limit) do |offset|
  Protein.search(@args.merge(limit: limit, offset:offset)).each do |p|
    csv << [
      p.tax.name,
      p.tax.id,
      "http://togogenome.org/organism/#{p.tax.id}",
    ]
  end
end
